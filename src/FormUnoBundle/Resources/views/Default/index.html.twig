        <a href="{{path('form_uno_new')}}" class="btn btn-success">Nuevo formulario</a>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="panel-body" style="width:900px; margin:0 auto;">
                <div id="list">
                    {% if po %}
                    <div class="table-responsive">                
                        <table class="table table-striped table-hover">
<thead>
                <tr>
                    <th>Dep</th>
                    <th>Sie</th>
                    <th>Numboleta</th>
                    <th>Unidad Educativa</th>
                    <th>Nombres</th>
                    <th>Paterno</th>
                    <th>Materno</th>
                    
                    <th>Acciones</th>
                </tr>
            </thead>
                            <tbody>
                                {% if po %}    
                                    {% for data in po %}                                                                
                                        <tr>
                                            <td>
                                                <b class="text-block">{{loop.index}}</b>
                                            </td>
                                            <td>
                                                {{data.dep}}
                                            </td>
                                            <td>
                                                {{data.nboleta}}
                                            </td>
                                            <td>
                                                {{data.cod_unidad_educativa}}
                                            </td>
                                            <td>
                                                {{data.nombre}}
                                            </td>
                                            <td>
                                                {{data.paterno}}
                                            </td>
                                            <td>  
                                                {{data.materno}}
                                            </td>                                    
                                            
                                            <td class="text-center">
                                                {# <a href="{{path('form_uno_update', {idfactor: data.id})}}class="btn btn-primary"">Ver - editar</a> #}
                                                <a href="{{ path('form_uno_update', { 'idfactor': data.id }) }}" class="btn btn-primary">Editar</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>                
                    {% endif %}
                    
                </div>    
            </div>
        </div>
    </div>
</div>
