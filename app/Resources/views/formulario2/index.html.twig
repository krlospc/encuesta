<!DOCTYPE html>
<html lang="es">
<head>
	<style type="text/css">
		table {
			border-collapse: collapse;
		}
		th, td {
			border: 1px solid #000000;
			padding: 10px;
			text-align: left;
		}
		
	</style>
	<meta charset="UTF-8">
	<title>Formulario 2</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
{% include 'AdmMaster/menuforms.html.twig' %}
<div class="container">

	<h1>FORMULARIO 2</h1>
	{% for flashMessage in app.session.flashbag.get('msg') %}
        <div class="alert alert-warning" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <i class="glyphicon glyphicon-ok"></i> {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('msgok') %}
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <i class="glyphicon glyphicon-ok"></i> {{ flashMessage }}
        </div>
    {% endfor %}

	<a href="{{path('formulario2_new')}}" class="btn btn-success">Nuevo formulario</a>
	<table class="table table-bordered table-stripped table-hover">
		<thead>
			<tr>
				<th rowspan="2">Folio</th>
				<th rowspan="2">Unidad Educativa</th>
				<th colspan="3">Docente</th>
				<th rowspan="2">Acciones</th>
			</tr>
			<tr>
				<th>Nombre(s)</th>
				<th>Paterno</th>
				<th>Materno</th>
			</tr>
		</thead>
		<tbody>
			{% for docente in docentes %}
				<tr>
					<td><b>{{docente.departamento}}-{{docente.codigoUnidadEducativa}}-{{docente.numeroBoleta}}</b></td>
					<td>{{docente.p1Unidadeducativa}}</td>
					<td>{{docente.p2Nombres}} </td>  
					<td>{{docente.p3Paterno}} </td>
					<td> {{docente.p4Materno}}</td>
					<td>
						<a href="{{ path('formulario2_edit', { 'id': docente.id }) }}" class="btn btn-primary">Editar</a>
						<a href="{{ path('formulario2_delete', { 'id': docente.id }) }}" class="btn btn-danger" onclick="return confirm('Esta seguro de que desea eliminar el registro?')">Eliminar</a>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>		
	
</div>
</body>
</html>