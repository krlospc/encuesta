{% extends 'base.html.twig' %}

{% block body %}
     {% include 'AdmMaster/menuforms.html.twig' %}
    <div class="container">
        <h1>FORMULARIO 4</h1>
        <a href="{{path('form4validacionregistro_new')}}" class="btn btn-success">Nuevo formulario</a>
        
        {% for flashMessage in app.session.flashbag.get('registroError') %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('registroOk') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Dep</th>
                    <th>Sie</th>
                    <th>Numboleta</th>
                    <th>Unidad Educativa</th>
                    <th>Nombres</th>
                    <th>Paterno</th>
                    <th>Materno</th>
                    <th>Fecha registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for form4validacionRegistro in form4validacionRegistros %}
                <tr>
                    <td>{{ form4validacionRegistro.dep }}</td>
                    <td>{{ form4validacionRegistro.sie }}</td>
                    <td>{{ form4validacionRegistro.numBoleta }}</td>
                    <td>{{ form4validacionRegistro.nomInstitucioneducativa }}</td>
                    <td>{{ form4validacionRegistro.nombres }}</td>
                    <td>{{ form4validacionRegistro.paterno }}</td>
                    <td>{{ form4validacionRegistro.materno }}</td>
                    <td>{{ form4validacionRegistro.fechaRegistro }}</td>
                    <td>
                        <a href="{{ path('form4validacionregistro_edit', { 'id': form4validacionRegistro.id }) }}" class="btn btn-primary">Editar</a>
                        <a href="{{ path('form4validacionregistro_eliminar', { 'id': form4validacionRegistro.id }) }}" class="btn btn-danger" onclick="return confirm('EstÃ¡ segura/o de que desea eliminar el registro?')">Eliminar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
