{% extends 'base.html.twig' %}

{% block body %}
     {% include 'AdmMaster/menuforms.html.twig' %}
    <div class="container">
        <h1>FORMULARIO 3</h1>
        <a href="{{path('formulario3_new')}}" class="btn btn-success">Nuevo formulario</a>
        {% if app.session.flashBag.has('error') %}
    <div class="alert alert-danger">
        {% for msg in app.session.flashBag.get('error') %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ msg }}
        {% endfor %}
        
    </div>
{% endif %}  
{% if app.session.flashBag.has('exito') %}
                            <div class="alert alert-success">
                                {% for msg in app.session.flashBag.get('exito') %}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    {{ msg }}
                                {% endfor %}
                            </div>
                {% endif %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Folio</th>
                    <th>Unidad Educativa</th>
                    <th>Nombres</th>
                    <th>Paterno</th>
                    <th>Materno</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for estudiante in estudiantes %}
                <tr>
                    <td>{{ estudiante.folioDep }}-{{ estudiante.folioCodigoUe }}-{{ estudiante.folioBoleta }}</td>
                    <td>{{ estudiante.p1Ue }}</td>
                    <td>{{ estudiante.p2Nombres }}</td>
                    <td>{{ estudiante.p3Paterno }}</td>
                    <td>{{ estudiante.p4Materno }}</td>
                    <td>
                        <a href="{{ path('formulario3_editar', { 'id': estudiante.id }) }}" class="btn btn-primary">editar</a>
						<a href="{{ path('formulario3_eliminar', { 'id': estudiante.id }) }}" class="btn btn-danger" onclick="return confirm('Esta seguro de que desea eliminar el registro?')">eliminar</a>
                        {#<a href="{{ path('formulario3_editar', { 'id': estudiante.id }) }}" class="btn btn-primary btn-xs text-primary" data-toggle="tooltip" data-placement="top" title="Editar">

                        </a>
                        <a href="{{ path('formulario3_editar', { 'id': estudiante.id }) }}" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Eliminar" onclick="return confirm('Â¿Esta suguro de eliminar?')">

                        </a>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}



